<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">fonts/Montserrat-SemiBold.ttf</item>
    </style>

    <style name="StatusTransparent">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="AppTheme.PopupOverlay" tools:ignore="ResourceCycle">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#000</item>
        <item name="android:textColorSecondary">#000</item>
    </style>

    <style name="bottom_navigation">
        <item name="android:background">#fff</item>
        <item name="itemBackground">@drawable/bottombar</item>
        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="itemTextColor">@color/colorPrimary</item>
    </style>

    <style name="forgot" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_txt</item>
    </style>

    <style name="LabelStyle" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/primary_txt</item>
    </style>

    <style name="NotDecidedLabel">
        <item name="android:fontFamily">fonts/Montserrat-Medium.ttf</item>
    </style>

    <style name="ratingbar">
        <item name="colorControlNormal">#999999</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <style name="ToolbarStyle">
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="searchbarDesign">
        <item name="android:fontFamily">fonts/Montserrat-Medium.ttf</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/edit_text_bg</item>
        <item name="android:textColor">@color/edit_text_txt</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="SolidButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CardViewStyle" parent="android:Widget.TextView">
        <item name="android:foreground">@drawable/selector_bg_card</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
</resources>
